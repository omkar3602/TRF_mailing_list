    <div id="wrapper">
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="d-sm-flex align-items-center justify-content-between mb-4">
                <h1 class="h3 mb-0 fs-1 fw-bolder text-dark">Dashboard</h1>
                <form action="/logout/" method="post" class="d-mb-inline-block d-sm-inline-block">
                    <button type="submit"
                        class="d-mb-inline-block d-sm-inline-block btn btn-sm btn-dark shadow-sm">Logout</button>
                </form>

            </div>

            <div class="row no-gutters">
                <div class="col-xl-6 col-md-6 mb-4">
                    <div class="card border-left-primary shadow py-0">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs fw-bold fs-5 text-dark text-uppercase mb-0 align-items-center">
                                        Admin Access</div>
                                    <!-- <a href="/login"
                                        class=" d-xs-block d-mb-block d-sm-block btn btn-sm btn-outline-dark shadow-sm mt-3 w-50">
                                        Login</a> -->
                                    <a href="/newsletters"
                                        class=" d-xs-block d-mb-block d-sm-block btn btn-sm btn-outline-dark shadow-sm mt-3 mb-2 w-50">
                                        Newsletters</a>
                                    <a href="/subscribers"
                                        class=" d-xs-block d-mb-block d-sm-block btn btn-sm btn-outline-dark shadow-sm mt-3 mb-2 w-50">
                                        Subscribers</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6 mb-4">
                    <div class="card border-left-primary shadow py-0">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div
                                        class="text-xs fw-bold fs-5 font-weight-bold text-dark text-uppercase mb-0 align-items-center">
                                        Public Access</div>
                                    <a href="/subscriptions"
                                        class="d-mb-block d-sm-block btn btn-sm btn-outline-dark shadow-sm mt-3 w-50">
                                        Subscriptions</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="card border-left-primary shadow px-2 m-3 mt-3 ">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <h3>Custom Email</h3>
                        <br><br>
                        <div>
                            <form action=<%=`/newsletters/custom_sendtoall`%> method="post" encType="multipart/form-data">
                                <label for="subject">SUBJECT:</label>
                                <input type="text" name="subject" class="form-control" style="width: 500px" placeholder="Subject" required>
                                <br>
                                <label for="content">CONTENT:</label>
                                <textarea rows="10" name="content" class="form-control" style="width: 500px" placeholder="Content" required></textarea>
                                <br>
                                <input class="form-control" type="file" accept=".xlsx" name="custom_data" required>
                                <button class="btn btn-sm btn-dark shadow-sm my-2" type="submit">Send</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>