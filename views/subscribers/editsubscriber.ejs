            <div class="row no-gutters align-items-center">
                <div>
                    <form method="POST">
                        <label for="email">Email:</label>
                        <input type="text" name="email" class="form-control" value="<%=subscriber.email%>"style="width: 500px" placeholder="Email" required>
                        <br>                        
                        <button class="btn btn-sm btn-dark shadow-sm px-4" type="submit">Edit</button>
                    </form>
                </div>
            </div>
        </div>
    </div> 
